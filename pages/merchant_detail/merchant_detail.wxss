.merchant_detail_bottom_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.merchant_detail_bottom_icon {
  width: 56rpx;
  height: 56rpx;
}

.merchant_detail_bottom_operation {
  font-size: 20rpx;
  color: rgba(129, 134, 143, 1);
}



.basic_item_key {
  flex-shrink: 0;
  color: rgba(129, 134, 143, 1);
  font-size: 28rpx;
  font-weight: 400;
}


