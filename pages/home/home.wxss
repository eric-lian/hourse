/* pages/home/home.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

#top_banners {
  height: 690rpx;
  z-index: -1;
}

.menu_row {
  height: 160rpx;
  display: flex;
  flex-direction: row;
}

.menu_item {
  display: flex;
  flex-direction: column;
  width: 25%;
  /* 子控件居中展示 */
  align-items: center;
  justify-content: center;
}

.menu_image {
  width: 72rpx;
  height: 72rpx;
}

.menu_text {
  font-size: 22rpx;
  color: #474654;
  font-weight: 500;
  text-align: center;
  margin-top: 16rpx;
}

#nav_title {
  font-size: 36rpx;
  color: white;
  margin-left: 32rpx;
  font-weight: 500;
  position: absolute;
}

#top_search_bar {
  display: flex;
  flex-direction: row;
  position: absolute;
  margin-top: 200rpx;
  width: 686rpx;
  height: 74rpx;
  background-color: white;
  margin-left: 32rpx;
  border-radius: 16rpx;
  align-items: center;
}

#top_search_bar_text {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #464D5A;
}

#top_search_bar_icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 28rpx;
}