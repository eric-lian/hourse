<!--pages/user/user_info_fill/user_info_edit.wxml-->
<block wx:if="{{!logined}}">
  <!-- justify-content: center; 垂直居中 align-items: center; 水平居中 -->
  <view style="display: flex; flex-direction: column;align-items: center;">
    <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{avatarUrl}}"></image>
    </button>
    <input type="nickname" style="margin-top: 60rpx;color: #000000; font-size: 32rpx;text-align: center;" placeholder="请输入昵称" maxlength="30" bindinput="onNicknameChanged"/>
    <button id="getUserProfileBtn" bindtap="getUserProfile" bindtap="saveUserInfo">保存</button>
  </view>
</block>